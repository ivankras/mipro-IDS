<table class="table table-striped">
	<tr>
	<td>
		<div class="container">
			<div class="container">
				<div class="row">
					<div class="col-md-10">
						<h1 class="text-left"> <%= @favor.titulo %> </h1>
					</div>
					<div class="col-md-2">
					<%= link_to "Ofrecerme", favors_path, class: "btn btn-warning" %>
					<%= link_to "Volver", :back, class: "btn btn-default" %></p>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-5">
					<% if @favor.foto_url == nil %>
						<%= image_tag "logo.png", title: "Logo", size: "400x400" %>
					<% else %>
						<%= image_tag @favor.foto_url, title: "Imagen Favor", :width => 450, :crop => :fit %>
					<% end %>
				</div>
				<div class="col-md-5"><p><%=@favor.descripcion%></p>
					<div class="caption">
						<% if @favor.usuario == nil %>
							<p class="text-right"><small>Escrito por <b>USUARIO PRUEBA </b></small></p>
						<% else %>
							<p class="text-right"><small>Escrito por <b><%= @favor.usuario.nombre %></b></small></p>
						<% end %>
						<p class="text-right"><small><%= @favor.ciudad %> | <%= localize(@favor.created_at, :format => :long) %></small></p>
					</div>
				</div>
			</div>
		</div>
	</td>
	</tr>
	<tr>
		<td>
			<div class="container">
				<h3> Comentarios </h3>
				<table class="table table-condensed">
					<% i = 1 %>
					<% @favor.comentario.each do |c| %>
						<tr>
							<td>
								<%= i %>
							</td>
							<td>
									<% if c.descripcion != nil %>
										<p><b>Pregunta:</b> <%= c.descripcion %></p>
										<% if c.respuesta != nil %>
											<p><b>Respuesta:</b> <i><%= c.respuesta %></i></p>
										<% end %>
									<% end %>
							</td>
						</tr>
						<% i = i + 1 %>
					<% end %>
				</table>
			</div>
		</td>
	</tr>
</table>

