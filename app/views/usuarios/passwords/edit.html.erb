<div class="container-fluid">
<h2 class="titulo_form_l text-center"><b>Cambiar contraseña</b></h2>
</div>

<div class="well container-fluid text-center">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <!--<%= devise_error_messages! %>
    -->
    <%= f.hidden_field :reset_password_token %>

    <form class="horizontal">
      <div class="form-group text-left">
        <%= f.label :password, "Nueva contraseña" %><br />
        <%= f.password_field :password, required: true, autocomplete: "off" , class: "form-control"%></span>
          <p class="text-right"><small><% if @minimum_password_length %><%= @minimum_password_length %> caracteres mínimo<% end %></small></p>
      </div>

      <div class="form-group text-left">
        <%= f.label :password_confirmation, "Confirmar nueva contraseña" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" , class: "form-control" %>
      </div>
      <br>
        <%= f.submit "Cambiar mi contraseña", class: "btn btn-success actions confirmation-btn" %>
        <%= link_to "Cancelar", root_path, class: "btn btn-danger confirmation-btn" %>
  </form>
  <% end %>
</div>
