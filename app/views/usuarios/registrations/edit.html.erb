<div class="container-fluid">
<h2 class="titulo_form_l text-center">Modificar datos</h2>
</div>

<div class="well container-fluid text-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <form class="horizontal">
      <div class="form-group text-left">
        <span data-toggle="tooltip" data-placement="bottom" title="Sólo letras y espacios">    
        <%= f.label :nombre %></span>
        <span data-toggle="tooltip" data-placement="bottom" title="Sólo letras y espacios">
        <%= f.text_field :nombre , class: "form-control" %> </span>
      </div>
      <div class="form-group text-left">
        <span data-toggle="tooltip" data-placement="bottom" title="Sólo letras y espacios">
        <%= f.label :apellido %></span>
        <span data-toggle="tooltip" data-placement="bottom" title="Sólo letras y espacios">
        <%= f.text_field :apellido, class: "form-control" %></span>
      </div>
      <div class="form-group text-left">
        <%= f.label :sexo , class: "form_lbl_sex"%><br>
        <%= f.radio_button :sexo, 'masculino'%><%= f.label :sexo, "Masculino" %><br>
        <%= f.radio_button :sexo, 'femenino', checked: true %><%= f.label :sexo, "Femenino" %><br>
      </div>
      <div class="form-group text-left">
        <%= f.label :fecha_nacimiento %>
        <%= f.date_field :fecha_nacimiento, class: "form-control" %>
      </div>
      <div class="form-group text-left">
        <span data-toggle="tooltip" data-placement="bottom" title="Código de país, código de área sin 0 y número, en caso de celular, sin 15. 
        Sin espacios">
        <%= f.label :telefono %></span>
        <span data-toggle="tooltip" data-placement="bottom" title="Código de país, código de área sin 0 y número, en caso de celular, sin 15. 
        Sin espacios">
        <%= f.telephone_field :telefono , class: "form-control" %></span>
      </div>
      <div class="form-group text-left">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true , class: "form-control"%>
      </div>
      <div class="form-group text-left"> 
        <span data-toggle="tooltip" data-placement="bottom" title="<% if @minimum_password_length %><%= @minimum_password_length %> characters mínimo<% end %>">
        <%= f.label :password, "Contraseña" %></span> <i>(No completar si no la quieres cambiar)</i>
        <span data-toggle="tooltip" data-placement="bottom" title="<% if @minimum_password_length %><%= @minimum_password_length %> characters mínimo<% end %>">
        <%= f.password_field :password, autocomplete: "off" , class: "form-control"%></span>
      </div>
      <div class="form-group text-left">
        <%= f.label :password_confirmation , "Confirmación de contraseña" %>
        <%= f.password_field :password_confirmation,  autocomplete: "off" , class: "form-control"%>
      </div>
      <div class="form-group text-left">
        <%= f.label :current_password, "Contraseña actual" %> <i>(Necesitamos la contraseña actual para confirmar los cambios)</i>
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
      </div>
      <br>
      <%= f.submit "Editar" , class: "btn btn-success actions confirmation-btn"%>
      <%= link_to "Cancelar", root_path, class: "btn btn-danger confirmation-btn" %>
    </form>
  <% end %>
    <br><br>
  <div class="form-group text-left">
  <h3>Cancelar mi cuenta</h3>
      <p>No conforme? <%= render 'usuarios/registrations/shutdownbutton' %></p>
  </div>
</div>
